# =============================================================================
# Aviation Multi-Agent Solver - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# PostgreSQL Database (ops tables â€” READ ONLY)
# =============================================================================
PGHOST=aistartupstr.postgres.database.azure.com
PGPORT=5432
PGDATABASE=fundrag
PGUSER=ozgurguler
PGPASSWORD=your_password_here
PG_SCHEMA=aviation_solver
SQL_VISIBLE_SCHEMAS=public,demo

# =============================================================================
# Redis (Event Bus)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Azure OpenAI
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://aoai-ep-swedencentral02.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_API_VERSION=2024-06-01
AZURE_OPENAI_AUTH_MODE=auto
AZURE_OPENAI_AGENT_DEPLOYMENT=gpt-5-nano
AZURE_OPENAI_ORCHESTRATOR_DEPLOYMENT=gpt-5-mini
AZURE_OPENAI_WORKER_DEPLOYMENT_NAME=gpt-5-mini
AZURE_TEXT_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# =============================================================================
# Azure AI Search (3 indexes)
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_ADMIN_KEY=your_search_key_here
AZURE_SEARCH_INDEX_OPS_NAME=idx_ops_narratives
AZURE_SEARCH_INDEX_REGULATORY_NAME=idx_regulatory
AZURE_SEARCH_INDEX_AIRPORT_NAME=idx_airport_ops_docs

# =============================================================================
# Fabric Eventhouse (KQL / Kusto)
# =============================================================================
FABRIC_KQL_ENDPOINT=https://your-eventhouse.kusto.fabric.microsoft.com/v1/rest/query
FABRIC_KQL_DATABASE=your_database_name
# FABRIC_KQL_SCHEMA_JSON=/path/to/kql_schema.json

# =============================================================================
# Fabric Graph
# =============================================================================
FABRIC_GRAPH_ENDPOINT=https://your-graph-endpoint

# =============================================================================
# Fabric SQL Warehouse (BTS delay data)
# =============================================================================
FABRIC_SQL_ENDPOINT=https://your-sql-endpoint
# FABRIC_SQL_CONNECTION_STRING=Driver={ODBC Driver 18 for SQL Server};Server=...

# =============================================================================
# Azure Cosmos DB (NOTAMs)
# =============================================================================
AZURE_COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
AZURE_COSMOS_KEY=your_cosmos_key_here
AZURE_COSMOS_DATABASE=aviationrag
AZURE_COSMOS_CONTAINER=notams

# =============================================================================
# Fabric Service Principal (for KQL, Graph, SQL auth)
# =============================================================================
FABRIC_TENANT_ID=
FABRIC_CLIENT_ID=
FABRIC_CLIENT_SECRET=
# FABRIC_BEARER_TOKEN=
# ALLOW_STATIC_FABRIC_BEARER=false

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
PORT=5001
LOG_LEVEL=INFO

# =============================================================================
# Frontend (Next.js)
# =============================================================================
BACKEND_URL=http://localhost:5001

# =============================================================================
# OpenTelemetry
# =============================================================================
OTEL_SERVICE_NAME=aviation-multi-agent
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
APPLICATIONINSIGHTS_CONNECTION_STRING=

# =============================================================================
# Azure Workload Identity (for AKS deployment)
# =============================================================================
# AZURE_CLIENT_ID=your_managed_identity_client_id
# AZURE_TENANT_ID=your_tenant_id
